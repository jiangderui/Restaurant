<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="vertical"
		android:fadingEdge="vertical">
		
		<LinearLayout android:id="@+id/hottopics"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="10dip"
		android:scrollbars="vertical">
		    <TextView
		       android:id="@+id/today"   
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content"  
		       android:textSize="16sp"/>  
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		       <TextView  
		          android:layout_width="wrap_content"  
		          android:layout_height="wrap_content"  
		          android:text="菜:    "/>  
		       <EditText   
		          android:id="@+id/greens"  
		          android:layout_height="wrap_content"   
		          android:layout_width="fill_parent"
		          android:numeric="decimal"
		          android:singleLine="true"/>  
		    </LinearLayout>  
		    
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		       <TextView  
		          android:layout_width="wrap_content"  
		          android:layout_height="wrap_content"  
		          android:text="米:    "/>  
		       <EditText   
		          android:id="@+id/rices"  
		          android:layout_height="wrap_content"   
		          android:layout_width="fill_parent"
		          android:numeric="decimal"
		          android:singleLine="true"/>  
		    </LinearLayout>
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		       <TextView  
		          android:layout_width="wrap_content"  
		          android:layout_height="wrap_content"  
		          android:text="油:    "/>  
		       <EditText   
		          android:id="@+id/oil"  
		          android:layout_height="wrap_content"   
		          android:layout_width="fill_parent"
		          android:numeric="decimal"
		          android:singleLine="true"/>  
		    </LinearLayout>
		    
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		       <TextView  
		          android:layout_width="wrap_content"  
		          android:layout_height="wrap_content"  
		          android:text="调料: "/>  
		       <EditText   
		          android:id="@+id/flavour"  
		          android:layout_height="wrap_content"   
		          android:layout_width="fill_parent"
		          android:numeric="decimal"
		          android:singleLine="true"/>  
		    </LinearLayout>
		    
		    
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		       <TextView  
		          android:layout_width="wrap_content"  
		          android:layout_height="wrap_content"  
		          android:text="燃料: "/>  
		       <EditText   
		          android:id="@+id/bunkers"  
		          android:layout_height="wrap_content"   
		          android:layout_width="fill_parent"
		          android:numeric="decimal"
		          android:singleLine="true"/>  
		    </LinearLayout>
		    
		    
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		       <TextView  
		          android:layout_width="wrap_content"  
		          android:layout_height="wrap_content"  
		          android:text="其它: "/>  
		       <EditText   
		          android:id="@+id/other"  
		          android:layout_height="wrap_content"   
		          android:layout_width="fill_parent"
		          android:numeric="decimal"
		          android:singleLine="true"/>  
		    </LinearLayout>
		    
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		       <TextView  
		          android:layout_width="wrap_content"  
		          android:layout_height="wrap_content"  
		          android:text="收入: "/>  
		       <EditText   
		          android:id="@+id/income"  
		          android:layout_height="wrap_content"   
		          android:layout_width="fill_parent"
		          android:numeric="decimal"
		          android:singleLine="true"/>  
		    </LinearLayout>
		     
		     
		    <LinearLayout  
		       android:orientation="horizontal"  
		       android:layout_width="fill_parent"  
		       android:layout_height="wrap_content">  
		    	<Button android:id="@+id/save"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:text="保存"/>       
		    </LinearLayout>
	    </LinearLayout>
    </ScrollView>
     
</LinearLayout>

