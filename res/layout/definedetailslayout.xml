<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
 
   		<Button android:id="@+id/analyze"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="分析"/>
   		
       <TextView
            android:id="@+id/itemstartday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         		android:textColor="#000000"
         		android:textSize="16sp"
	            android:layout_weight="1" />
 
        <Button
            android:id="@+id/pickstartdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期" />
        
       <TextView
            android:id="@+id/itemendday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         		android:textColor="#000000"
         		android:textSize="16sp"
	            android:layout_weight="1" />
 
        <Button
            android:id="@+id/pickenddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束日期" />
        </LinearLayout>    
   	
   	
   	<LinearLayout  
       android:orientation="horizontal"  
       android:layout_width="fill_parent"  
       android:layout_height="wrap_content">  
       <TextView
          android:id="@+id/defineddate"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="年-月-日"/>
       
       <TextView
          android:id="@+id/definedincome"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="收入"/>
       
        <TextView
          android:id="@+id/definedgreens"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="菜"/>
        <TextView
          android:id="@+id/definedrices"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="米"/>  
        <TextView
          android:id="@+id/definedoil"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="油"/>  
        <TextView
          android:id="@+id/definedbunkers"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="燃料"/>  
        <TextView
          android:id="@+id/definedflavour"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="调料"/>  
        <TextView
          android:id="@+id/definedother"
          android:layout_width="wrap_content"  
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="其它"/>  
    </LinearLayout>
    
    <ListView
        android:id="@+id/detailslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
